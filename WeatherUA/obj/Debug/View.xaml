<Page x:Class="WeatherUA.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:WeatherUA"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:nmspc="using:WeatherUA.Source_Code"
      mc:Ignorable="d">
    <Page.DataContext>
        <nmspc:ViewModel />
    </Page.DataContext>
    <Grid x:Name="Body">
        <Grid.RowDefinitions>
            <RowDefinition Height="55*" />
            <RowDefinition Height="716*" />
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="{Binding BackGroundImg}" Stretch="UniformToFill" />
        </Grid.Background>
        <TextBlock Margin="10,10,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   FontFamily="Segoe UI"
                   FontSize="36"
                   FontWeight="Bold"
                   Foreground="White"
                   Text="{Binding TtlWeatherFor}"
                   TextWrapping="NoWrap" />
        <ScrollViewer x:Name="ScrlvContentHolder"
                      Grid.Row="1"
                      Grid.RowSpan="2"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">
            <Grid x:Name="Wrapper">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="560*" />
                    <ColumnDefinition Width="811*" />
                </Grid.ColumnDefinitions>
                <Grid x:Name="GrdContent"
                      Grid.Column="0"
                      Margin="0"
                      HorizontalAlignment="Left">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50*" />
                        <RowDefinition Height="10*" />
                        <RowDefinition Height="100*" />
                    </Grid.RowDefinitions>
                    <Grid.Background>
                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                            <GradientStop Offset="0" Color="Transparent" />
                            <GradientStop Offset="0.99" Color="#B2D1D1D1" />
                        </LinearGradientBrush>
                    </Grid.Background>
                    <TextBlock x:Name="LblTemperature"
                               Grid.Row="0"
                               Margin="10,0,0,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               FontSize="72"
                               RenderTransformOrigin="0.5,0.5"
                               Text="{Binding TemperatureNow}"
                               TextWrapping="Wrap" />
                    <TextBlock x:Name="LblFealsLike"
                               Grid.Row="0"
                               Margin="10,91,0,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               FontSize="20"
                               Text="{Binding FeelsLike}"
                               TextWrapping="Wrap" />
                    <TextBlock x:Name="LblWindSpeed"
                               Grid.Row="0"
                               Margin="10,130,0,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               FontSize="20"
                               Text="{Binding WindSpeed}"
                               TextWrapping="Wrap" />
                    <TextBlock x:Name="LblSky"
                               Grid.Row="0"
                               Margin="298,91,0,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               FontSize="20"
                               Text="{Binding SkyStatus}"
                               TextWrapping="Wrap" />
                    <TextBlock x:Name="LblWindSpeedCopy"
                               Grid.Row="0"
                               Margin="298,130,0,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               FontSize="20"
                               Text="{Binding WindDirection}"
                               TextWrapping="Wrap" />
                    <TextBlock Grid.Row="1"
                               Margin="172,1,214,0"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="20"
                               RenderTransformOrigin="0.5,0.5"
                               Text="10 DAYS FORECAST"
                               TextWrapping="Wrap" />
                    <Grid x:Name="ForecastWrapper"
                          Grid.Row="2"
                          Margin="5, 0, 5, 5">
                        <ProgressRing Width="50"
                                      Height="50"
                                      Margin="0,0,0,0"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Foreground="#FF343434"
                                      IsActive="{Binding ProgressRingEnabled}" />
                        <ScrollViewer MaxHeight="569"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Stretch"
                                      HorizontalScrollBarVisibility="Auto"
                                      VerticalScrollBarVisibility="Auto">
                            <ItemsControl HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch"
                                          ItemsSource="{Binding WeatherStatForecasts}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Height="140"
                                                    Margin="0, 0, 0, 5"
                                                    HorizontalAlignment="Stretch"
                                                    Orientation="Horizontal">
                                            <StackPanel.Background>
                                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                    <LinearGradientBrush.RelativeTransform>
                                                        <CompositeTransform CenterX="0.5"
                                                                            CenterY="0.5"
                                                                            Rotation="90" />
                                                    </LinearGradientBrush.RelativeTransform>
                                                    <GradientStop Offset="0" Color="Transparent" />
                                                    <GradientStop Offset="1" Color="#33FFFFFF" />
                                                </LinearGradientBrush>
                                            </StackPanel.Background>
                                            <StackPanel Name="Date_Week"
                                                        Width="80"
                                                        Orientation="Vertical">
                                                <TextBlock Margin="0, 30, 0, 0"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           FontFamily="Segoe UI"
                                                           FontSize="25"
                                                           FontWeight="Bold"
                                                           Text="{Binding Day}"
                                                           TextAlignment="Center" />

                                                <TextBlock FontFamily="Segoe UI"
                                                           FontSize="25"
                                                           FontWeight="Bold"
                                                           Text="{Binding WeekdayShrt}"
                                                           TextAlignment="Center" />
                                            </StackPanel>
                                            <StackPanel Name="SkyStatus"
                                                        Width="160"
                                                        Margin="0"
                                                        Orientation="Vertical">

                                                <Image MaxWidth="85"
                                                       MaxHeight="86"
                                                       Source="{Binding BackGroundImg}" />

                                                <TextBlock MaxWidth="160"
                                                           MaxHeight="54"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Bottom"
                                                           FontFamily="Segoe UI"
                                                           FontSize="20"
                                                           Text="{Binding SkyStat}"
                                                           TextAlignment="Center"
                                                           TextWrapping="Wrap" />

                                            </StackPanel>
                                            <StackPanel Name="Temperature"
                                                        Width="265"
                                                        MaxWidth="300"
                                                        Margin="10, 0, 0, 0"
                                                        Orientation="Vertical">
                                                <TextBlock MaxWidth="265"
                                                           MaxHeight="54"
                                                           FontFamily="Segoe UI"
                                                           FontSize="28"
                                                           FontWeight="Bold"
                                                           Text="{Binding TemperatureH}"
                                                           TextAlignment="Left"
                                                           TextWrapping="Wrap" />

                                                <TextBlock MaxWidth="265"
                                                           MaxHeight="54"
                                                           FontFamily="Segoe UI"
                                                           FontSize="28"
                                                           FontWeight="Bold"
                                                           Text="{Binding TemperatureL}"
                                                           TextAlignment="Left"
                                                           TextWrapping="Wrap" />

                                                <TextBlock MaxHeight="54"
                                                           FontFamily="Segoe UI"
                                                           FontSize="18"
                                                           Text="{Binding Wind}"
                                                           TextAlignment="Left"
                                                           TextWrapping="Wrap" />

                                                <TextBlock MaxHeight="54"
                                                           FontFamily="Segoe UI"
                                                           FontSize="18"
                                                           Text="{Binding WindDirection}"
                                                           TextAlignment="Left"
                                                           TextWrapping="Wrap" />
                                            </StackPanel>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Grid>
                <Grid Grid.Column="1"
                      Width="555"
                      Height="418"
                      Margin="100,0,100,0"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Background="#7FC9C9C9">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20*" />
                        <RowDefinition Height="20*" />
                        <RowDefinition Height="80*" />
                        <RowDefinition Height="30*" />
                    </Grid.RowDefinitions>
                    <Grid.Resources>
                        <Style x:Key="ListItemsStyle" TargetType="ListViewItem">
                            <Setter Property="FontSize" Value="24" />
                            <Setter Property="FontFamily" Value="Segoe UI" />
                            <Setter Property="Margin" Value="5,0,0,0" />
                            <Setter Property="Padding" Value="10, 0, 0, 0" />
                        </Style>
                    </Grid.Resources>
                    <TextBlock Grid.Row="0"
                               Margin="0,0,0,-4"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               CharacterSpacing="83"
                               FontFamily="Segoe UI"
                               FontSize="24"
                               Foreground="Black"
                               Text="LOCATION SETTINGS"
                               TextWrapping="Wrap" />
                    <TextBlock Grid.Row="1"
                               Margin="20,0,0,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               FontFamily="Segoe UI"
                               FontSize="20"
                               Foreground="Black"
                               Text="Choose your city from the list below:"
                               TextWrapping="Wrap" />
                    <ListView Grid.Row="2"
                              Margin="5"
                              DisplayMemberPath="Name"
                              Foreground="Black"
                              IsEnabled="{Binding UpdateBtnEnabled}"
                              ItemContainerStyle="{StaticResource ListItemsStyle}"
                              ItemsSource="{Binding Cities}"
                              SelectedItem="{Binding ChosenCity,
                                                     Mode=TwoWay}" />
                    <Button Grid.Row="3"
                            Width="275"
                            Height="45"
                            Margin="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            BorderBrush="Black"
                            Command="{Binding UpdateBtn}"
                            Content="Update weather info"
                            FontSize="16"
                            Foreground="Black"
                            IsEnabled="{Binding UpdateBtnEnabled}" />
                    <ProgressRing Grid.Row="3"
                                  Width="39"
                                  Height="39"
                                  Margin="72,22.714,0,0"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Top"
                                  Foreground="Black"
                                  IsActive="{Binding ProgressRingEnabled}" />
                </Grid>
                <Image Grid.Column="1"
                       Width="146"
                       Height="85"
                       Margin="0,0,10,10"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Bottom"
                       Source="Assets/wundergroundLogo_4c.png" />

            </Grid>
        </ScrollViewer>
    </Grid>
</Page>

